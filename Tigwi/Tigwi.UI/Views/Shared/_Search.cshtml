@model Tigwi.UI.Models.SearchViewModel
           
@using (Html.BeginForm("ShowAccount", "Account", FormMethod.Post, new { @class = "navbar-search" }))
{
    @Html.TextBoxFor(m => m.searchString, new { @class="search-query", placeHolder="Search for a User"})
    <input type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px;"/>
}