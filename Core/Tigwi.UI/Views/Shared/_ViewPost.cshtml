@model Tigwi.UI.Models.IPostModel

<article class="message poster-@Model.Poster.Id">
    <div class="row-fluid">
        <img class="span2" style="border-radius: 20px;" src="@Url.Content("~/Content/images/default_profile_1_bigger.png")"/>
        <section class="span10">
            <h5>@Model.Poster.Name</h5>
            <p>@Model.Content</p>
        </section>
            
    </div>
</article>
