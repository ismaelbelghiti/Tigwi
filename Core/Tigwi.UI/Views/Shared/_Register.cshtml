@model Tigwi.UI.Models.User.RegisterViewModel

@using (Html.BeginForm("Register", "User", FormMethod.Post, new Dictionary<string, object> { { "class", "pull-center form-inline" } }))
{

    <h4>Sign up to Tigwi!</h4>
    @Html.ValidationSummary()
    <input type="text" class="input-block-level" id="field-username" name="Login" placeholder="Username" />
    <br />
    <input type="text" class="input-block-level" name="Email" placeholder="Email" id="field-email" />
    <input type="password" class="input-block-level" name="Password" placeholder="Password" id="field-password" />
    <br />
    <input type="password" class="input-block-level" name="ConfirmPassword" placeholder="Confirm your password" id="field-confirm-password" />
    <p class="pull-center" style="margin-top: 10px;">
        <button type="submit" class="btn btn-primary">Register!</button>
        <button type="reset" class="btn btn-inverse">Reset</button>
    </p>
}